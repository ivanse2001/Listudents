<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pasarLista.MainPage"
             Title="INICIO SESIÓN"
             BackgroundColor="White" >

    <StackLayout>
        <Image Source="logo.jpg" />

        <Entry x:Name="Login" Placeholder="Introduce el login"/>
        
        <Entry x:Name="Password" Placeholder="Introduce password" IsPassword="True"/>
        
        <Button x:Name="botonUser" Text="Iniciar Sesión" Clicked="botonUser_Clicked"
                FontSize="Medium"
                FontAttributes="None"
                CornerRadius="15" Scale="0.9"/>

    </StackLayout>

</ContentPage>
