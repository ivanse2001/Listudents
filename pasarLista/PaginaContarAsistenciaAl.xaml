<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="pasarLista.PaginaContarAsistenciaAl"
    Title="PASAR LISTA"
    BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout x:Name="asistencia_qr" Margin="70" Spacing="20">
            <Label x:Name="EtiquetaNombre" TextColor="Black"
                   FontSize="Title"
                   HorizontalOptions="Center"/>
            <Label x:Name="EtiquetaFecha"
                   FontSize="Subtitle"
                   HorizontalOptions="Center"/>
            <Button x:Name="BotonPasarLista" Text="Pasar Asistencia con NFC" Clicked="BotonPasarLista_Clicked" CornerRadius="15"/>
            <Button x:Name="ButtonQR" Text="Pasar Asistencia con QR" Clicked="ButtonQR_Clicked" CornerRadius="15"/>
            
        </StackLayout>
        
        
    </ContentPage.Content>
</ContentPage>
